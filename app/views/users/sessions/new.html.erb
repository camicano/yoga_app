<div class="offset-by-six">
	<h2 class="subtitle">Sign in <i id="leaf" class="icon-check-sign"></i></h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  	<div><%= f.email_field :email, :autofocus => true, :placeholder => "email" %></div>

  	<div><%= f.password_field :password, :placeholder => "password" %></div>

  	<% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %><%= f.label :remember_me, :class => "bodytext" %></div>
  	<% end -%>

  	<div><%= f.submit "Sign in" %></div>
	<% end %>

	<%= render "users/shared/links" %>
</div>
