<div class="offset-by-six">
	<h2 class="subtitle">Sign up <i id="leaf" class="icon-pencil"></i></h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  	<%= devise_error_messages! %>

  	<div><%= f.email_field :email, :autofocus => true, :placeholder => "email" %></div>

  	<div><%= f.password_field :password, :placeholder => "password" %></div>

  	<div><%= f.password_field :password_confirmation, :placeholder => "retype password" %></div>

  	<div><%= f.submit "Sign up" %></div>
	<% end %>

	<%= render "studios/shared/links" %>
</div>
