<h1>Profile</h1>

<h3>Studio Details</h3>

<p>Name: <%= @address.name %></p>
<br>
<p>Address: <%= @address.address %> </p>
<p>Description: <%= @address.description %></p>

<ul>
	<% @studio.yogaclasses.each do |yogaclass| %>
		<a href="/studios/profile/class/<%= yogaclass.id %>">
			<li><%= yogaclass.title %>: <%= yogaclass.day %> at <%= yogaclass.time %>. ($<%=  yogaclass.cost %>)</li>
		</a>
	<% end %>
</ul>

<%= link_to "Add a class", new_yogaclass_path %>  |   
